{
  "name": "vscode-spectra-assist",
  "displayName": "Spectra Assist",
  "description": "syntax highlighting and snippets for spectra input files",
  "publisher": "seanfroste",
  "version": "0.7.0",
  "repository": "https://github.com/seanfroste/vscode-spectra-assist",
  "engines": {
    "vscode": "^1.87.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "in",
        "aliases": [
          "spectra-in",
          "in"
        ],
        "extensions": [
          ".in"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "in",
        "scopeName": "source.in",
        "path": "./syntaxes/in.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "in",
        "path": "./snippets/in.code-snippets"
      }
    ],
    "configuration": {}
  },
  "license": "MIT",
  "main": "./client/out/extension",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd .."
  },
  "devDependencies": {
    "@types/node": "^20.12.7",
    "typescript": "^5.4.5",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "eslint": "^8.57.0"
  }
}